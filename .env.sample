# Meeting Manager Application Configuration
# Copy this file to .env and set your actual values

# ========================================
# APPLICATION SETTINGS
# ========================================
# Application environment (development, production, testing)
FLASK_ENV=development

# Application secret key for session management and security
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# ========================================
# SECURITY SETTINGS
# ========================================
# Session timeout in minutes
SESSION_TIMEOUT=30

# Enable CSRF protection
WTF_CSRF_ENABLED=True

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Database connection URI
# Examples:
# SQLite: sqlite:///meeting_manager.db
# PostgreSQL: postgresql://user:password@localhost/meeting_manager
# MySQL: mysql://user:password@localhost/meeting_manager
SQLALCHEMY_DATABASE_URI=sqlite:///meeting_manager.db

# Enable SQL query logging in development
SQLALCHEMY_ECHO=False

# ========================================
# EMAIL CONFIGURATION
# ========================================
# SMTP server settings for sending emails
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=your-email@example.com

# ========================================
# NETWORK CONFIGURATION
# ========================================
# Host and port for the application
# Use 0.0.0.0 to allow external connections
HOST=0.0.0.0
PORT=8000

# ========================================
# INTERNATIONALIZATION
# ========================================
# Default locale and timezone
BABEL_DEFAULT_LOCALE=en
BABEL_DEFAULT_TIMEZONE=UTC

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Log output destination (stdout or file)
LOG_TO_STDOUT=True
LOG_LEVEL=INFO

# ========================================
# FILE UPLOAD SETTINGS
# ========================================
# Maximum file upload size in bytes (16MB default)
MAX_CONTENT_LENGTH=16777216

# Upload directory (relative to project root)
UPLOAD_FOLDER=uploads